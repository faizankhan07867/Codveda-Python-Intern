# api_integration.py
import requests

def get_coin_price(coin_id="bitcoin", vs_currency="usd"):
    url = f"https://api.coingecko.com/api/v3/simple/price"
    params = {"ids": coin_id, "vs_currencies": vs_currency}
    r = requests.get(url, params=params, timeout=10)
    r.raise_for_status()
    data = r.json()
    return data.get(coin_id, {}).get(vs_currency)

if __name__ == "__main__":
    try:
        price = get_coin_price("bitcoin", "usd")
        if price is None:
            print("Couldn't fetch price.")
        else:
            print(f"Bitcoin price (USD): {price}")
    except requests.RequestException as e:
        print("Request failed:", e)




#Run: python api_integration.py
